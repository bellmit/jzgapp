<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_add_item_dealer_msg_checked"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/replace_dealer_checked_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_item_dealer_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey3"
            android:textStyle="bold"
            android:text=""/>
        <TextView
            android:id="@+id/tv_add_item_dealer_msg_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey1"
            android:text="地址："/>
        <TextView
            android:id="@+id/tv_add_item_dealer_msg_phongnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey1"
            android:text="电话："/>

    </LinearLayout>

</LinearLayout>
