<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:orientation="horizontal"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/view_buycar_titlefilter_isLoanLayout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/buycar_title_filter_selector"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="贷款购车"
            android:gravity="center"
            style="@style/small_grey_text_style"/>

        <ImageView
            android:id="@+id/view_buycar_titlefilter_isLoan_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/input"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_buycar_titlefilter_defaultsort_line"
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:background="@color/line_bg"/>
    <LinearLayout
        android:id="@+id/view_buycar_titlefilter_defaultsort_Layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/buycar_title_filter_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_buycar_titlefilter_defaultsort_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新发布"
            android:singleLine="true"
            style="@style/small_grey_text_style"/>

        <ImageView
            android:id="@+id/view_buycar_titlefilter_defaultsort_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dip"
            android:background="@drawable/icon_xjt"/>
    </LinearLayout>

    <View
        android:id="@+id/view_buycar_titlefilter_allbrand_Line"
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:background="@color/line_bg"/>
    <LinearLayout
        android:id="@+id/view_buycar_titlefilter_allbrand_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/buycar_title_filter_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_buycar_titlefilter_allbrand_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="品牌"
            style="@style/small_grey_text_style"/>

        <ImageView
            android:id="@+id/view_buycar_titlefilter_allbrand_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dip"
            android:background="@drawable/icon_xjt"/>
    </LinearLayout>
    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:background="@color/line_bg"/>

    <LinearLayout
        android:id="@+id/view_buycar_titlefilter_more_layout"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/buycar_title_filter_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_buycar_titlefilter_more_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="更多"
            style="@style/small_grey_text_style"/>

        <ImageView
            android:id="@+id/view_buycar_titlefilter_more_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dip"
            android:background="@drawable/icon_xjt"/>
    </LinearLayout>
</LinearLayout>