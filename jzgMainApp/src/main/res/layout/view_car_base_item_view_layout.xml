<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_listview_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/view_car_imageview"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/view_car_offline"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/view_car_imageview"
            android:layout_alignTop="@id/view_car_imageview"
            android:background="#80000000"
            android:gravity="center"
            android:text="已下架"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/view_car_imageview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_car_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:maxLines="2"
                android:text="北京现代2015款  豪华版 2.0T 舒适型"
                android:textColor="#111111"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/view_car_summary_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_car_mileage_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.1万公里"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#666666" />

                <TextView
                    android:id="@+id/view_car_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2013年12月"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#666666" />

                <TextView
                    android:id="@+id/view_car_region_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="北京"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_car_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="17.78"
                    android:textColor="#ff4c4d"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:includeFontPadding="false"
                    android:text="万"
                    android:textColor="#ff4c4d"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/view_car_evaluate_price_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        android:text="精真估估价:"
                        android:textColor="#3c3c3c"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/view_car_evaluate_price_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:includeFontPadding="false"
                        android:text="8.88万"
                        android:textColor="#3c3c3c"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_line_bg" />
</LinearLayout>