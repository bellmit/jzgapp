<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ImageView
        android:id="@+id/right_menu_settings_imageview"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/text_blue"
        android:layout_gravity="right"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <ImageView
            android:id="@+id/right_menu_head_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/text_blue"/>
        <LinearLayout
            android:layout_toRightOf="@id/right_menu_head_imageview"
            android:layout_alignBottom="@id/right_menu_head_imageview"
            android:layout_alignTop="@id/right_menu_head_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/right_menu_username_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="穆萨"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/right_menu_phonenumber_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="13209212341"/>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商城兑换"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_bg"/>
    <RelativeLayout
        android:id="@+id/right_menu_messagecenter_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/right_menu_messagecenter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="消息中心"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <ImageView
            android:id="@+id/right_menu_messagecenter_text"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/right_menu_messagecenter_textview"
            android:background="@color/text_red"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/right_menu_newActivity_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="最新活动"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/right_menu_makeCarsource_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/right_menu_makeCarsource_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="订阅车源"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/right_menu_carsourceNumber_textview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/right_menu_makeCarsource_textview"
            android:background="@color/text_red"
            android:text="3"
            android:gravity="center"
            android:textSize="@dimen/jzg_common_xsmall_size"
            android:textColor="@color/text_item_title_black"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/right_menu_carSourceCollect_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="收藏车源"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/right_menu_newInformation_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="最新资讯"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/right_menu_IllegalQuery_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="违章查询"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/right_menu_carRepalce_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="车辆置换"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>

    <RelativeLayout
        android:id="@+id/right_menu_carSellProgress_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:padding="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/right_menu_carSellProgress_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="卖车进度"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>
        <ImageView
            android:id="@+id/right_menu_carSellProgress_redImageView"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/right_menu_carSellProgress_TextView"
            android:background="@color/text_red"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg"/>
</LinearLayout>