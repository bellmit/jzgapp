<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img_dialog_hedge_show_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_cle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/white_dialog_bg"
        android:orientation="vertical"
        android:paddingTop="40dp" >

        <ImageView
            android:id="@+id/img_dialog_hedge_show_carpic"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            android:src="@drawable/jingzhengu_moren" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/line_for_valuation"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未来五年保值率"
                android:gravity="center"
                android:textColor="@color/text2_for_valuation"
                android:background="@drawable/bg_wrt" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/line_for_valuation"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <com.jzg.jzgoto.phone.view.valuation.ValuationHedgeBarView
            android:id="@+id/self_dialog_hedge_show_bar"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btn_dialog_hedge_show_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="查看在售"
            android:textColor="@color/blue_for_valuation"
            android:padding="10dp"
            android:background="@drawable/btn_blue_round_border_white_normal_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialog_hedge_show_levelpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_n1"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:paddingTop="25dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="0"/>

        <TextView
            android:id="@+id/tv_dialog_hedge_show_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_for_valuation" />

        <TextView
            android:id="@+id/tv_dialog_hedge_show_models"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="@color/text_for_valuation" />
    </LinearLayout>

</RelativeLayout>