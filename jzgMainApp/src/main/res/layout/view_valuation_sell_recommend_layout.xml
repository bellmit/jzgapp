<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加价换车推荐    加"
            android:textColor="@color/dark_grey_text"
            android:textSize="@dimen/jzg_common_small_size"/>
        <EditText
            android:id="@+id/valuation_sell_recommend_addPrice"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:text="5"
            android:maxLength="3"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/dark_grey_text"
            android:textSize="@dimen/jzg_common_small_size"/>
        <TextView
            android:id="@+id/valuation_sell_recommend_carName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万，可以换个迈腾"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/dark_grey_text"
            android:textSize="@dimen/jzg_common_small_size"/>
    </LinearLayout>
    <TextView
        android:id="@+id/valuation_sell_recommend_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新车源"
        android:background="@drawable/btn_blue_round_border_white_selector"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/jzg_common_small_size"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/text_blue"/>

    <com.jzg.jzgoto.phone.view.buy.BuyCarDetailSimilarCarView
        android:id="@+id/valuation_sell_recommend_similarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>