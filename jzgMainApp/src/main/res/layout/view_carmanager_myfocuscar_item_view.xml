<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_lineaer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/view_car_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:text="本田"
            android:textColor="@color/commone_main_title_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/view_drag_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:src="@drawable/drag" />

        <ImageView
            android:id="@+id/view_delete_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="105dp"
            android:src="@drawable/zhiding" />

        <ImageView
            android:id="@+id/view_notice_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="185dp"
            android:visibility="gone"
            android:src="@drawable/tixing_xuanzhong" />
    </RelativeLayout>
    <View
        android:id="@+id/view_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="@color/common_line_bg" />
</LinearLayout>