<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/view_card_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >
        <com.jzg.jzgoto.phone.view.carmanager.MyCarRecommendCarItemView
            android:id="@+id/view_card_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.jzg.jzgoto.phone.view.carmanager.MyCarRecommendCarItemView
            android:id="@+id/view_card_middle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.jzg.jzgoto.phone.view.carmanager.MyCarRecommendCarItemView
            android:id="@+id/view_card_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <View
        android:id="@+id/view_item_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_line_bg"
        android:visibility="gone"/>

</RelativeLayout>