<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_buycar_search_hotWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_left_bg"
            android:gravity="center"
            android:text="热门搜索"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/view_buycar_search_historyWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_right_bg"
            android:gravity="center"
            android:text="历史搜索"
            android:textColor="@color/text_blue" />
    </LinearLayout>

    <com.jzg.jzgoto.phone.view.buy.TagFlowLayout
        android:id="@+id/view_buycar_search_tagFlowLayout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>