<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:background="@color/bg_grey">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="我的车"
            android:textColor="@color/black_font"
            android:textSize="@dimen/jzg_common_small_size" />
        <TextView
            android:id="@+id/btn_manager_my_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="管理"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/jzg_common_small_size"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/car_banner_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
        <LinearLayout
            android:id="@+id/car_empty_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/view_car_license_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="你的车库空空如也，快来添加您的爱车吧"
                android:textColor="#3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_add_car"
                style="@style/FillBlueTextWhiteStyle"
                android:layout_width="255dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="添加爱车" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>