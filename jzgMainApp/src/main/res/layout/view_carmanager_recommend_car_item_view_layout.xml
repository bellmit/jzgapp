<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#ffffff"
	android:gravity="center_horizontal"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="80dp">
		<ImageView
			android:id="@+id/view_car_imageview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:src="@drawable/touxiang"
			android:scaleType="centerInside" />
	</RelativeLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/view_car_maker_name_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:includeFontPadding="false"
			android:maxLines="1"
			android:text="本田"
			android:textColor="#3c3c3c"
			android:textSize="14sp" />
		<TextView
			android:id="@+id/view_car_model_name_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:includeFontPadding="false"
			android:maxLines="1"
			android:text="雅阁"
			android:textColor="#3c3c3c"
			android:textSize="14sp" />
	</LinearLayout>

	<TextView
		android:id="@+id/view_car_add_focus_btn"
		style="@style/BorderBlueFillWhiteTextBlueStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:includeFontPadding="false"
		android:text="+关注"
		android:textColor="#5087e3"
		android:textSize="13sp" />

</LinearLayout>