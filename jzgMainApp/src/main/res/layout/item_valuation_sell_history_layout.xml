<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dip"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_val_history_dealTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            style="@style/small_text_size"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/item_val_history_name"
            android:textColor="@color/text_item_lightgrey"
            android:text="2016.5.20成交"/>

        <TextView
            android:id="@+id/item_val_history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/large_text_size"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingRight="5dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_val_history_dealTime"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_item_title_black"
            android:text="奔驰C级撒嗲是滴撒动  C200"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_val_history_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/xlarge_text_size"
            android:textColor="@color/red_for_valuation"
            android:text="1288.25"/>
        <TextView
            android:id="@+id/item_val_history_wan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/small_text_size"
            android:textColor="@color/red_for_valuation"
            android:gravity="bottom"
            android:layout_alignBaseline="@+id/item_val_history_price"
            android:text="万"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:layout_alignBaseline="@+id/item_val_history_price"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_val_history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_text_size"
                android:textColor="@color/text_filter_darkgrey"
                android:text="2011年6月"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_text_size"
                android:textColor="@color/text_filter_darkgrey"
                android:layout_marginLeft="5dp"
                android:text="|"/>
            <TextView
                android:id="@+id/item_val_history_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_text_size"
                android:textColor="@color/text_filter_darkgrey"
                android:layout_marginLeft="5dip"
                android:text="7.9万公里"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_text_size"
                android:textColor="@color/text_filter_darkgrey"
                android:layout_marginLeft="5dp"
                android:text="|"/>
            <TextView
                android:id="@+id/item_val_history_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_text_size"
                android:textColor="@color/text_filter_darkgrey"
                android:layout_marginLeft="5dip"
                android:text="北京"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
