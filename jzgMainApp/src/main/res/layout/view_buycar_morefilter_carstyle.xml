<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车型"
            android:layout_alignParentLeft="true"
            android:textColor="@color/text_filter_darkgrey"
            android:textSize="@dimen/jzg_common_small_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_car_style_choosebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:visibility="invisible"
            android:drawablePadding="5dip"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/go"
            android:textColor="@color/text_item_lightgrey"
            android:textSize="@dimen/jzg_common_small_size"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_car_style_all"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/all"/>

        <TextView
            android:id="@+id/view_car_source_style_jincou"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/jcx"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view_car_source_style_zhongxing"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/zx"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_car_source_style_daxing"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dx"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view_car_source_style_suv"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/suv"
            android:gravity="center"/>

        <TextView
            android:id="@+id/view_car_source_style_mvp"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/mpv"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>