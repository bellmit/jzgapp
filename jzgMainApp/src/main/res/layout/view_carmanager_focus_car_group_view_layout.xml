<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:gravity="center_vertical">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
			android:gravity="center"
			android:orientation="horizontal" >
			<TextView
				android:id="@+id/view_car_maker_name_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:includeFontPadding="false"
				android:text="本田"
				android:textColor="#3c3c3c"
				android:textSize="16sp" />
			<TextView
				android:id="@+id/view_car_model_name_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:includeFontPadding="false"
				android:text="雅阁"
				android:textColor="#3c3c3c"
				android:textSize="16sp" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:gravity="center"
			android:orientation="horizontal" >
			<TextView
				android:id="@+id/view_car_news_update_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:includeFontPadding="false"
				android:text=""
				android:textColor="#999999"
				android:textSize="16sp" />
			<ImageView
				android:id="@+id/view_car_arrow_imageview"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:scaleType="centerInside"
				android:src="@drawable/arrow_down" />
		</LinearLayout>
	</RelativeLayout>

	<include layout="@layout/view_divider" />

	<RelativeLayout
		android:id="@+id/view_expand_suggestion_info_container"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:gravity="center_vertical">
		<TextView
			android:id="@+id/view_suggestion_info_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:includeFontPadding="false"
			android:text="置换爱车，即可拥有"
			android:textColor="@color/commone_blue_normal_color"
			android:textSize="14sp" />
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:scaleType="centerInside"
			android:src="@drawable/arrow_right" />
	</RelativeLayout>

	<include layout="@layout/view_divider" />

</LinearLayout>